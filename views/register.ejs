<div class="login-container">
    <div class="form-box">
        <% if (message && message.length > 0) { %>
            <div class="notification">
                <%= message %>
            </div>
        <% } %>
        <h1>ثبت نام</h1>
        <form action="/register" method="POST">
            <div class="input-group">
                <input type="text" name="username" placeholder="نام کاربری مورد نظر خود را وارد کنید" required>
            </div>
            <div class="input-group">
                <input type="email" name="email" placeholder="ایمیل خود را وارد کنید" required>
            </div>
            <div class="input-group">
                <input type="password" id="password" name="password" placeholder="رمز عبور خود را ایجاد کنید" required>
            </div>
            <div class="input-group">
                <input type="password" name="confirmPassword" id="confirmPassword" placeholder="تأیید رمز عبور" required>
            </div>
            
            <div class="checkbox-group">
                <input type="checkbox" id="show-password">
                <label for="show-password">نمایش رمز عبور</label>
            </div>
            <div class="input-group">
                <button type="submit">ثبت نام</button>
            </div>
        </form>
        <div class="login-link">
            <p>قبلا ثبت نام کرده اید؟</p>
            <a href="/login"><button class="login-btn">ورود</button></a>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const showPasswordCheckbox = document.getElementById('show-password');
        const passwordInput = document.getElementById('password');


        showPasswordCheckbox.addEventListener('change', function() {
            passwordInput.type = this.checked ? 'text' : 'Password';
        });
    });
    document.addEventListener('DOMContentLoaded', function() {
        const showPasswordCheckbox = document.getElementById('show-password');
        const passwordInput = document.getElementById('password');
        const confirmPasswordInput = document.getElementById('confirmPassword'); // فیلد تأیید رمز عبور
    
        showPasswordCheckbox.addEventListener('change', function() {
            passwordInput.type = this.checked ? 'text' : 'password';
            confirmPasswordInput.type = this.checked ? 'text' : 'password'; // تغییر نوع فیلد تأیید رمز عبور
        });
    });
    
</script>



