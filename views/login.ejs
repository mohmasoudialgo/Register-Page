<div class="login-container">
    <div class="form-box">
        <h1>ورود</h1>
        <% if (message && message.length > 0) { %>
            <div class="notification">
                <%= message %>
            </div>
        <% } %>
        <form action="/login" method="POST">
            <div class="input-group">
                <input type="text" name="username" placeholder="نام کاربری یا ایمیل خود را وارد کنید" required>
            </div>
            <div class="input-group">
                <input type="password" name="password" id="password" placeholder="رمز عبور خود را وارد کنید" required>
                <div class="checkbox-group">
                    <input type="checkbox" id="show-password">
                    <label for="show-password">نمایش رمز عبور</label>
                </div>
                <a href="/password_reset"><h4>رمز عبور خود را فراموش کردید؟</h4></a>
            </div>
            <div class="input-group">
                <button type="submit">ورود</button>
            </div>
        </form>
        <div class="register-link">
            <p>حساب کاربری ندارید؟</p>
            <a href="/register"><button class="register-btn">هم اکنون ثبت نام کنید</button></a>
        </div>
    </div>
</div>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const showPasswordCheckbox = document.getElementById('show-password');
        const passwordInput = document.getElementById('password');

        showPasswordCheckbox.addEventListener('change', function() {
            passwordInput.type = this.checked ? 'text' : 'password';
        });
    });
</script>

